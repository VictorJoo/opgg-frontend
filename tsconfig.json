{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"baseUrl": "src",
		"paths": {
			"@components": ["components"],
			"@components/*": ["components/*"],
			"@hooks": ["hooks"],
			"@hooks/*": ["hooks/*"],
			"@pages": ["pages"],
			"@pages/*": ["pages/*"],
			"@utils": ["utils"],
			"@utils/*": ["utils/*"],
			"@constants": ["constants"],
			"@constants/*": ["constants/*"],
			"@layouts": ["layouts"],
			"@layouts/*": ["layouts/*"],
			"@helpers": ["helpers"],
			"@store": ["store"],
			"@store/*": ["store/*"],
			"@app": ["app"],
			"@icons": ["icons"],
			"@modals": ["modals"]
		}
	},
	"include": ["src"]
}
